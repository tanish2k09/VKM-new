<resources>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="MainTheme" parent="AppTheme.NoActionBar">
        <item name="android:colorControlActivated">@color/itemColor</item>
        <item name="android:colorControlNormal">@color/applicationBG</item>
        <item name="android:actionMenuTextColor">@color/textColorPrimary</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="SplashTheme" parent="AppTheme.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_screen_drawable</item>
    </style>
</resources>
